{
  "name": "i18next-hmr",
  "version": "1.4.1",
  "description": "I18Next HMR webpack plugin that allows to reload translation resources on client & server.",
  "homepage": "https://github.com/felixmosh/i18next-hmr",
  "bugs": "https://github.com/felixmosh/i18next-hmr/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/felixmosh/i18next-hmr"
  },
  "main": "client.js",
  "types": "types.d.ts",
  "scripts": {
    "test": "jest"
  },
  "keywords": [
    "i18next",
    "HMR",
    "webpack",
    "plugin"
  ],
  "author": "felixmosh",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.14",
    "jest": "^24.9.0",
    "prettier": "^1.19.1"
  },
  "jest": {
    "testMatch": [
      "**/__tests__/**/*.spec.js"
    ],
    "transform": {
      "(client|server)-hmr\\.js": "<rootDir>/__tests__/utils/preprocessor.js"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "testEnvironment": "node"
  }
}
